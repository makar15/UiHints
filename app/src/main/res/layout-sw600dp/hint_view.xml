<?xml version="1.0" encoding="utf-8"?>
<codes.evolution.uihintslib.ui.HintContainerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/hint_tablet_container_width"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/hint_fields_layout"
        style="@style/TabletLinearHintContainer">

        <TextView
            android:id="@+id/title"
            style="@style/TabletViewsHintContainer"
            android:textSize="@dimen/hint_tablet_title" />

        <TextView
            android:id="@+id/message"
            style="@style/TabletViewsHintContainer"
            android:layout_marginBottom="15dp"
            android:textSize="@dimen/hint_tablet_message" />
    </LinearLayout>
</codes.evolution.uihintslib.ui.HintContainerLayout>
